namespace WindowsFormsRefresh4
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void btnStrings_Click(object sender, EventArgs e)
        {
            //camelCase notation is when start you variables with lower case.
            string firstName;
            firstName = txtboxData.Text;
            MessageBox.Show(firstName, "Text");

            firstName = "Hello";
            MessageBox.Show(firstName,"Text");

        }
    }
}
